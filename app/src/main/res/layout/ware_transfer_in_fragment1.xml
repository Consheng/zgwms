<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_e0e0e0"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_getFocus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="none" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginTop="@dimen/_6dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:ems="6"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_6dp"
                    android:text="PDA单号"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_pdaNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_style_gray1c"
                    android:gravity="center|left"
                    android:hint="保存后自动生成"
                    android:paddingLeft="@dimen/_6dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginTop="@dimen/_6dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:ems="6"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_6dp"
                    android:text="调拨日期*"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_inDateSel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_style_blue2"
                    android:drawableRight="@drawable/xiala3"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_6dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:ems="6"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_6dp"
                    android:text="调拨类型*"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:background="@drawable/back_style_blue2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_transferType1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="true"
                        android:text="组织内调拨" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <RadioButton
                        android:id="@+id/rb_transferType2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_6dp"
                        android:text="跨组织调拨" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_sourceOrder"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:ems="6"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_6dp"
                    android:text="分步式调出单*"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_sourceOrderSel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:background="@drawable/back_style_blue2"
                    android:drawableRight="@drawable/xiala3"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_6dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:ems="6"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_6dp"
                    android:text="调入库存组织*"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_stockOrgSel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_style_blue2"
                    android:drawableRight="@drawable/xiala3"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_6dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_sourceType"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:ems="6"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_6dp"
                    android:text="调入货主类型"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_fownerTypeSel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_style_blue2"
                    android:drawableRight="@drawable/xiala3"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_6dp"
                    android:text="业务组织"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_sourceOrder"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sourceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:ems="6"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_6dp"
                    android:text="调入货主*"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_fownerSel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_style_blue2"
                    android:drawableRight="@drawable/xiala3"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_6dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:ems="6"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_6dp"
                    android:text="调出库存组织*"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_stockOutOrgSel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_style_gray2a"
                    android:drawableRight="@drawable/xiala3"
                    android:enabled="false"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_6dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_fownerOutType"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:ems="6"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_6dp"
                    android:text="调出货主类型"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_fownerOutTypeSel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_style_blue2"
                    android:drawableRight="@drawable/xiala3"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_6dp"
                    android:text="业务组织"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_fownerOut"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:ems="6"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_6dp"
                    android:text="调出货主*"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_fownerOutSel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_style_blue2"
                    android:drawableRight="@drawable/xiala3"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_6dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:ems="6"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_6dp"
                    android:text="领料人"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_emp1Sel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_style_blue2"
                    android:drawableRight="@drawable/xiala3"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_6dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="@dimen/_8dp"
                android:layout_marginRight="@dimen/_8dp"
                android:layout_marginTop="@dimen/_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:ems="6"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_6dp"
                    android:text="仓管员"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_emp2Sel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_style_blue2"
                    android:drawableRight="@drawable/xiala3"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_6dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_margin="@dimen/_8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#b7b7b7"
                    android:ems="6"
                    android:gravity="center|right"
                    android:paddingRight="@dimen/_6dp"
                    android:text="制单人"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_operationManName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_6dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_style_gray1c"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/_6dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_clone"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="0.5"
            android:background="@drawable/btn_gray2_selector"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/c_515151"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/btn_blue2_selector"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>

